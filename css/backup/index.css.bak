  height: 44px;
  justify-content: center;
  align-items: center;
  
  /* Glow effect */
  box-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.navbar__toggle:hover {
  background: rgba(255, 255, 255, 0.2);
  box-shadow: 0 0 15px rgba(255, 255, 255, 0.4);
}

.navbar__toggle span {
  width: 24px;
  height: 2px;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 3px;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* Hamburger animation */
.navbar__toggle span:nth-child(1) {
  transform-origin: center;
}

.navbar__toggle span:nth-child(3) {
  transform-origin: center;
}

.nav-open .navbar__toggle span:nth-child(1) {
  transform: translateY(7px) rotate(45deg);
}

.nav-open .navbar__toggle span:nth-child(2) {
  opacity: 0;
}

.nav-open .navbar__toggle span:nth-child(3) {
  transform: translateY(-7px) rotate(-45deg);
}

/* Desktop menu */
.navbar__menu {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  margin-left: auto;
}

/* Nav links container */
.navbar__links {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  
  /* Glass effect */
  background: rgba(255, 255, 255, 0.08);
  border-radius: 30px;
  padding: 0.6rem 1.2rem;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  
  /* Subtle inner shadow */
  box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.2);
  
  /* Text styling */
  font-weight: 500;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 0 5px rgba(255, 255, 255, 0.5);
  
  /* Transition for nav animations */
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* Individual nav links */
.navbar__links a {
  position: relative;
  padding: 0.3rem 0.8rem;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.8);
  border-radius: 20px;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* Active link state */
.navbar__links a.active {
  color: #fff;
  background: rgba(255, 255, 255, 0.15);
  box-shadow: 
    0 0 10px rgba(255, 255, 255, 0.2),
    inset 0 0 5px rgba(255, 255, 255, 0.1);
  text-shadow: 0 0 8px rgba(255, 255, 255, 0.8);
}

/* Hover effects for links */
.navbar__links a:hover {
  color: #fff;
  background: rgba(255, 255, 255, 0.1);
  text-shadow: 0 0 8px rgba(255, 255, 255, 0.8);
}

/* Language toggle button */
.lang-btn {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.9);
  padding: 0.5rem 1.2rem;
  border-radius: 30px;
  font-weight: 500;
  border: 1px solid rgba(255, 255, 255, 0.2);
  cursor: pointer;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  
  /* Glow effect */
  box-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
  text-shadow: 0 0 5px rgba(255, 255, 255, 0.5);
  
  /* Smooth transitions */
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.lang-btn:hover {
  background: rgba(255, 255, 255, 0.2);
  box-shadow: 0 0 15px rgba(255, 255, 255, 0.4);
  border-color: rgba(255, 255, 255, 0.4);
  transform: translateY(-1px);
}

/* Mobile styling */
@media (max-width: 768px) {
  .navbar {
    width: 92%;
    padding: 0 1rem;
    height: 60px;
  }
  
  .navbar__toggle {
    display: flex;
    margin-left: auto;
  }
  
  .navbar__menu {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    transform: translateY(-100%);
    width: 100%;
    height: 100vh;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    gap: 2rem;
    
    /* Glassmorphism for dropdown */
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    
    /* Initial hidden state */
    visibility: hidden;
    opacity: 0;
    pointer-events: none;
    
    /* Animation */
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    
    /* Box shadow */
    box-shadow: 0 0 30px rgba(255, 0, 0, 0.2);
    
    /* Ensure it's above other content */
    z-index: 9998;
  }
  
  /* Mobile menu active state */
  .navbar__menu.nav-open {
    visibility: visible;
    opacity: 1;
    transform: translateY(0);
    pointer-events: all;
  }
  
  /* Mobile nav links adjustments */
  .navbar__links {
    flex-direction: column;
    width: 90%;
    max-width: 400px;
    gap: 1rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(30px);
    opacity: 0;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1), opacity 0.6s ease;
    transition-delay: 0.1s;
  }
  
  .nav-open .navbar__links {
    transform: translateY(0);
    opacity: 1;
  }
  
  .navbar__links a {
    display: block;
    width: 100%;
    padding: 1rem;
    text-align: center;
    border-radius: 10px;
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    transform: translateY(20px);
    opacity: 0;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }
  
  .nav-open .navbar__links a {
    transform: translateY(0);
    opacity: 1;
  }
  
  .nav-open .navbar__links a:nth-child(1) { transition-delay: 0.2s; }
  .nav-open .navbar__links a:nth-child(2) { transition-delay: 0.25s; }
  .nav-open .navbar__links a:nth-child(3) { transition-delay: 0.3s; }
  .nav-open .navbar__links a:nth-child(4) { transition-delay: 0.35s; }
  .nav-open .navbar__links a:nth-child(5) { transition-delay: 0.4s; }
  
  .navbar__links a.active {
    background: rgba(255, 255, 255, 0.2);
  }
  
  /* Mobile language button */
  .lang-btn {
    width: 90%;
    max-width: 400px;
    text-align: center;
    margin-top: 1rem;
    padding: 1rem;
    font-size: 1.1rem;
    transform: translateY(30px);
    opacity: 0;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    transition-delay: 0.45s;
  }
  
  .nav-open .lang-btn {
    transform: translateY(0);
    opacity: 1;
  }
  
  /* Prevent body scrolling when menu is open */
  body.menu-open {
    overflow: hidden;
  }
  
  /* Adjust logo size in mobile menu */
  .navbar__logo img {
    max-height: 35px;
  }
}

