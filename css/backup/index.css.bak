  position: absolute;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0, 0, 0, 0.08);
  clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%);
  z-index: -1;
}
.testimonials-content {
  max-width: 1100px;
  margin: 0 auto;
}
.testimonials-content h2 {
  font-size: 2rem;
  margin-bottom: 2rem;
  text-shadow: 0 2px 5px rgba(0,0,0,0.4);
}
.testimonial-slider {
  position: relative;
  max-width: 800px;
  margin: 0 auto;
  overflow: hidden;
}
.testimonial-slide {
  display: none;
  padding: 1.5rem;
  background: rgba(255,255,255,0.1);
  backdrop-filter: blur(30px);
  border-radius: 8px;
  margin-bottom: 1rem;
}
.testimonial-slide.active {
  display: block;
  animation: fadeInSlide 0.6s ease;
}
@keyframes fadeInSlide {
  from {opacity: 0; transform: translateY(10px);}
  to {opacity: 1; transform: translateY(0);}
}
.testimonial-text {
  font-size: 1rem;
  line-height: 1.4;
  margin-bottom: 1rem;
  color: #fff;
}
.client-name {
  font-weight: 600;
  color: #ffc; 
}

/* Arrows */
.slider-arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: #f05a28;
  color: #fff;
  border: none;
  width: 40px; height: 40px;
  border-radius: 4px;
  cursor: pointer;
  font-size: 1.2rem;
  opacity: 0.8;
  transition: opacity 0.3s;
}
.slider-arrow:hover {
  opacity: 1;
}
.left-arrow {
  left: 0; margin-left: -45px;
}
.right-arrow {
  right: 0; margin-right: -45px;
}
.slider-dots {
  margin-top: 1rem;
}
.dot {
  display: inline-block;
  width: 10px; 
  height: 10px;
  border-radius: 50%;
  margin: 0 5px;
  background: #ddd;
  cursor: pointer;
  transition: background 0.3s;
}
.dot.active {
  background: #f05a28;
}

/***************************************************************
  10) NEWSLETTER CTA
***************************************************************/
.newsletter-scenic {
  position: relative;
  padding: 4rem 1rem;
  color: #fff;
  overflow: hidden;
  text-align: center;
}
.newsletter-bg {
  position: absolute;
  top: 0; 
  left: 0;
  width: 100%; 
  height: 100%;
  background: url('../assets/new/worker colab communiocation.png') center/cover no-repeat;
  z-index: 0;
  filter: brightness(0.6);
}
.newsletter-overlay {
  position: absolute;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.5);
  clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%);
  z-index: -1;
}
.newsletter-content {
  max-width: 700px;
  margin: 0 auto;
  backdrop-filter: blur(5px);
  background: rgba(255,255,255,0.1);
  border-radius: 8px;
  padding: 2rem;
}
.newsletter-content h3 {
  font-size: 1.8rem;
  margin-bottom: 1rem;
  text-shadow: 0 2px 4px rgba(0,0,0,0.3);
}
.newsletter-content p {
  margin-bottom: 1.5rem;
  font-size: 1rem;
  line-height: 1.5;
}
#newsletterFormDe, #newsletterFormEn {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}
#newsletterFormDe input[type="email"], 
#newsletterFormEn input[type="email"] {
  padding: 0.7rem;
  border-radius: 4px;
  border: 1px solid #999;
  outline: none;
}
.form-group {
  font-size: 0.9rem;
  text-align: left;
  color: #fff;
}
.btn-newsletter {
  display: inline-block;
  background: #f05a28;
  color: #fff;
  padding: 0.7rem 1.2rem;
  border-radius: 4px;
  font-weight: 600;
  border: none;
  cursor: pointer;
  transition: background 0.3s;
}
.btn-newsletter:hover {
  background: #d54f22;
}

/***************************************************************
  11) APPOINTMENT CTA
***************************************************************/
.appointment-scenic {
  position: relative;
  padding: 3rem 1rem;
  text-align: center;
  color: #fff;
  overflow: hidden;
}
.appointment-bg {
  position: absolute;
  top: 0; 
  left: 0;
  width: 100%; 
  height: 100%;
  background: url('../assets/new/trust agent .png') center/cover no-repeat;
  z-index: 0;
  filter: brightness(0.5);
}
.appointment-overlay {
  position: absolute;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0, 0, 0, 0.1);

  clip-path: polygon(0 15%, 100% 0, 100% 100%, 0 85%);
}
.appointment-content {
  max-width: 800px;
  margin: 0 auto;
  backdrop-filter: blur(10px);
  background: rgba(0, 0, 0, 0.08);
  border-radius: 8px;
  padding: 2rem;
}
.appointment-content h2 {
  font-size: 2rem;
  margin-bottom: 1rem;
  text-shadow: 0 2px 4px rgba(0,0,0,0.5);
}
.appointment-content p {
  margin-bottom: 1.5rem;
  font-size: 1rem;
  line-height: 1.5;
  color: #f8f8f8;
}
.btn-appointment {
  display: inline-block;
  background: #f05a28;
  color: #fff;
  padding: 0.7rem 1.4rem;
  border-radius: 4px;
  font-weight: 600;
  text-decoration: none;
  transition: background 0.3s, transform 0.3s;
}
.btn-appointment:hover {
  background: #d54f22;
  transform: translateY(-2px);
}

/***************************************************************
  12) FOOTER
***************************************************************/
.footer {
  background: #1a1a1a;
  text-align: center;
  padding: 2rem 1rem;
  font-size: 0.9rem;
  color: #999;
  margin-top: 3rem;
  border-top: 1px solid #333;
}
.footer p {
  margin-bottom: 0.5rem;
}
.footer a {
  color: #bbb;
  text-decoration: underline;
}
.footer a:hover {
  color: #fff;
}

