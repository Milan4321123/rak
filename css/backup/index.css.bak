/***************************************************************
  1) GLOBAL RESET & BASE STYLES
***************************************************************/
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html, body {
  font-family: "Poppins", sans-serif;
  background: #0c0c0c; /* overall dark black */
  color: #ccc;         /* default text in silver */
  line-height: 1.6;
  scroll-behavior: smooth;
  position: relative;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Basic link styling */
a {
  text-decoration: none;
  color: inherit;
  transition: color 0.3s ease;
}
a:hover {
  color: #fff; /* highlight text on hover */
}

img, video {
  display: block;
  width: 100%;
  height: auto;
}

/* For toggled language sections */
.hidden {
  display: none !important;
}

/* If you have a fixed navbar, offset content if needed */
body::before {
  content: "";
  display: block;
  height: 70px; /* match your .navbar height */
}

/***************************************************************
  2) NAVBAR - APPLE SIRI INSPIRED GLASSY DESIGN
***************************************************************/
.navbar {
  position: fixed;
  top: 1rem;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  max-width: 1200px;
  height: 70px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  
  /* Glassmorphism base */
  background: rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  
  /* Subtle gradient overlay */
  background-image: linear-gradient(
    135deg, 
    rgba(244, 67, 54, 0.3) 0%, 
    rgba(156, 39, 176, 0.3) 30%,
    rgba(33, 150, 243, 0.3) 70%, 
    rgba(0, 200, 83, 0.3) 100%
  );
  
  /* Border radius for pill shape */
  border-radius: 9999px;
  
  /* Padding and shadow */
  padding: 0 1.5rem;
  box-shadow: 
    0 0 15px 2px rgba(255, 0, 0, 0.3),
    0 0 30px 4px rgba(0, 0, 255, 0.2),
    inset 0 0 10px rgba(255, 255, 255, 0.1);
  
  /* Animation for glow effect */
  animation: siriglow 8s infinite alternate;
  
  /* High z-index to appear above all content */
  z-index: 9999;
  
  /* Smooth transitions */
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* Siri-like glow animation */
@keyframes siriglow {
  0% {
    box-shadow: 
      0 0 15px 2px rgba(255, 0, 0, 0.3),
      0 0 30px 4px rgba(0, 0, 255, 0.2);
  }
  25% {
    box-shadow: 
      0 0 15px 2px rgba(0, 255, 0, 0.3),
      0 0 30px 4px rgba(255, 0, 0, 0.2);
  }
  50% {
    box-shadow: 
      0 0 15px 2px rgba(0, 0, 255, 0.3),
      0 0 30px 4px rgba(255, 255, 0, 0.2);
  }
  75% {
    box-shadow: 
      0 0 15px 2px rgba(255, 255, 0, 0.3),
      0 0 30px 4px rgba(0, 255, 255, 0.2);
  }
  100% {
    box-shadow: 
      0 0 15px 2px rgba(255, 0, 255, 0.3),
      0 0 30px 4px rgba(0, 255, 0, 0.2);
  }
}

/* Logo styling */
.navbar__logo {
  flex-shrink: 0;
  position: relative;
  z-index: 1;
}

.navbar__logo img {
  max-height: 40px;
  width: auto;
  filter: drop-shadow(0 0 5px rgba(255, 255, 255, 0.5));
  transition: all 0.3s ease;
}

.navbar__logo:hover img {
  transform: scale(1.05);
  filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.8));
}

/* Hamburger for mobile */
.navbar__toggle {
  display: none;
  flex-direction: column;
  gap: 5px;
  margin-left: auto;
  cursor: pointer;
  padding: 10px;
  z-index: 10001;
  
  /* Glass effect for toggle */
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 50%;
  width: 44px;
  height: 44px;
  justify-content: center;
  align-items: center;
  
  /* Glow effect */
  box-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.navbar__toggle:hover {
  background: rgba(255, 255, 255, 0.2);
  box-shadow: 0 0 15px rgba(255, 255, 255, 0.4);
}

.navbar__toggle span {
  width: 24px;
  height: 2px;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 3px;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* Hamburger animation */
.navbar__toggle span:nth-child(1) {
  transform-origin: center;
}

.navbar__toggle span:nth-child(3) {
  transform-origin: center;
}

.nav-open .navbar__toggle span:nth-child(1) {
  transform: translateY(7px) rotate(45deg);
}

.nav-open .navbar__toggle span:nth-child(2) {
  opacity: 0;
}

.nav-open .navbar__toggle span:nth-child(3) {
  transform: translateY(-7px) rotate(-45deg);
}

/* Desktop menu */
.navbar__menu {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  margin-left: auto;
}

/* Nav links container */
.navbar__links {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  
  /* Glass effect */
  background: rgba(255, 255, 255, 0.08);
  border-radius: 30px;
  padding: 0.6rem 1.2rem;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  
  /* Subtle inner shadow */
  box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.2);
  
  /* Text styling */
  font-weight: 500;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 0 5px rgba(255, 255, 255, 0.5);
  
  /* Transition for nav animations */
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* Individual nav links */
.navbar__links a {
  position: relative;
  padding: 0.3rem 0.8rem;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.8);
  border-radius: 20px;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* Active link state */
.navbar__links a.active {
  color: #fff;
  background: rgba(255, 255, 255, 0.15);
  box-shadow: 
    0 0 10px rgba(255, 255, 255, 0.2),
    inset 0 0 5px rgba(255, 255, 255, 0.1);
  text-shadow: 0 0 8px rgba(255, 255, 255, 0.8);
}

/* Hover effects for links */
.navbar__links a:hover {
  color: #fff;
  background: rgba(255, 255, 255, 0.1);
  text-shadow: 0 0 8px rgba(255, 255, 255, 0.8);
}

/* Language toggle button */
.lang-btn {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.9);
  padding: 0.5rem 1.2rem;
  border-radius: 30px;
  font-weight: 500;
  border: 1px solid rgba(255, 255, 255, 0.2);
  cursor: pointer;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  
  /* Glow effect */
  box-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
  text-shadow: 0 0 5px rgba(255, 255, 255, 0.5);
  
  /* Smooth transitions */
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.lang-btn:hover {
  background: rgba(255, 255, 255, 0.2);
  box-shadow: 0 0 15px rgba(255, 255, 255, 0.4);
  border-color: rgba(255, 255, 255, 0.4);
  transform: translateY(-1px);
}

/* Mobile styling */
@media (max-width: 768px) {
  .navbar {
    width: 92%;
    padding: 0 1rem;
    height: 60px;
  }
  
  .navbar__toggle {
    display: flex;
    margin-left: auto;
    position: relative;
    z-index: 10001;
  }
  
  /* Fixed mobile menu */
  .navbar__menu {
    position: fixed;
    top: 80px; /* Position below navbar */
    left: 0;
    width: 100%;
    height: calc(100vh - 80px); /* Full height minus navbar */
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    padding: 2rem;
    
    /* Glassmorphism for dropdown */
    background: rgba(0, 0, 0, 0.95);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    
    /* Initial hidden state */
    visibility: hidden;
    opacity: 0;
    pointer-events: none;
    
    /* Animation */
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    
    /* Box shadow */
    box-shadow: 0 0 30px rgba(255, 0, 0, 0.2);
    
    /* Ensure it's above other content */
    z-index: 9990;
    
    /* Initial position - off screen */
    transform: translateY(-30px);
  }
  
  /* Mobile menu active state */
  .navbar__menu.nav-open {
    visibility: visible;
    opacity: 1;
    transform: translateY(0);
    pointer-events: all;
  }
  
  /* Mobile nav links adjustments */
  .navbar__links {
    flex-direction: column;
    width: 90%;
    max-width: 400px;
    gap: 1rem;
    padding: 1.5rem;
    margin-top: 1rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
  }
  
  .navbar__links a {
    display: block;
    width: 100%;
    padding: 1rem;
    text-align: center;
    border-radius: 10px;
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
  }
  
  .navbar__links a.active {
    background: rgba(255, 255, 255, 0.2);
    box-shadow: 0 0 15px rgba(255, 255, 255, 0.1);
  }
  
  /* Mobile language button */
  .lang-btn {
    width: 90%;
    max-width: 400px;
    text-align: center;
    margin-top: 1rem;
    padding: 1rem;
    font-size: 1.1rem;
  }
  
  /* Prevent body scrolling when menu is open */
  body.menu-open {
    overflow: hidden;
  }
  
  /* Adjust logo size in mobile menu */
  .navbar__logo img {
    max-height: 35px;
    position: relative;
    z-index: 10001;
  }
}

/***************************************************************
  HERO SECTION (ANGLED) – with background video
***************************************************************/
.hero-angled {
  position: relative;
  width: 100%;
  height: 100vh; /* Full viewport height */
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.hero-bg-video {
  position: absolute;
  top: 0; 
  left: 0;
  width: 100%; 
  height: 100%;
  object-fit: cover;
  /* 
    To ensure the video stays behind the overlay & content, 
    give it a lower z-index than the overlay 
  */
  z-index: -2;
}

.hero-overlay-angled {
  position: absolute;
  top: 0; 
  left: 0;
  width: 100%;
  height: 100%;
  /* 
    Slight diagonal overlay. 
    Increase/decrease RGBA values for more or less darkness. 
  */
  background: linear-gradient(
    115deg, 
    rgba(0, 0, 0, 0.6) 50%, 
    rgba(0, 0, 0, 0.4) 50%
  );
  clip-path: polygon(0 0, 100% 0, 100% 75%, 0 100%);
  z-index: -1; /* overlay is behind content but above video */
}

.hero-angled-content {
  position: relative;
  max-width: 800px;
  text-align: center;
  padding: 2rem;
  background: rgba(255, 255, 255, 0.07);
  backdrop-filter: blur(4px);
  border-radius: 8px;
  z-index: 1; /* ensures text/content is on top of overlay & video */
}

.hero-angled-content h1 {
  font-size: 2.4rem;
  margin-bottom: 1rem;
  color: #fff;
}

.hero-angled-content p {
  font-size: 1.1rem;
  margin-bottom: 1.5rem;
  line-height: 1.5;
  color: #ccc;
}

.hero-angled-btn {
    display: inline-block;
    padding: 0.6rem 1.2rem;
    background: transparent;
    border: 2px solid #f05a28;
    color: #f05a28;
    border-radius: 4px;
    font-weight: 600;
    transition: 0.3s;
  
}

.hero-angled-btn:hover {
  background: #666;
  transform: translateY(-2px);
}

/* 
  WHY REMIX - ALTERNATIVE STYLE 
  (Uses a dark background, red accent, and a 4-column grid)
*/

.why-remix-alt {
  background: #111; 
  color: #fff;
  padding: 4rem 2rem;
}

/* ----- Heading & Intro ----- */
.why-remix-alt-heading {
  text-align: center;
  max-width: 800px;
  margin: 0 auto 2rem;
}

.why-remix-alt-heading h2 {
  font-size: 2.2rem;
  margin-bottom: 1rem;
  position: relative;
  color: #fff;
}

/* Subtle orange/red "underline" below the H2 */
.why-remix-alt-heading h2::after {
  content: "";
  display: block;
  width: 60px;
  height: 3px;
  background: #f05a28; /* or your desired shade of red/orange */
  margin: 0.5rem auto 0;
}

.why-remix-lead {
  color: #ccc;
  font-size: 1.1rem;
  line-height: 1.5;
  max-width: 600px;
  margin: 0 auto;
}

/* ----- Cards Grid ----- */
.why-remix-cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

.why-remix-card {
  background: #1a1a1a;
  border: 1px solid #2a2a2a;
  border-radius: 8px;
  padding: 1.5rem;
  text-align: center;
  transition: transform 0.3s, box-shadow 0.3s;
}

.why-remix-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
}

/* Circular red icon area at top (you can swap text for an actual icon) */
.why-remix-icon {
  width: 50px;
  height: 50px;
  background: #f05a28;
  border-radius: 50%;
  margin: 0 auto 1rem;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-weight: bold;
  font-size: 1.1rem;
}

.why-remix-card h3 {
  color: #fff;
  margin-bottom: 0.8rem;
}

.why-remix-card p {
  color: #ccc;
  font-size: 0.95rem;
  line-height: 1.4;
}

/* ----- CTA Button ----- */
.why-remix-cta {
  text-align: center;
  margin-top: 2.5rem;
}

.why-remix-btn {
  display: inline-block;
  background: #f05a28;
  color: #fff;
  padding: 0.65rem 1.2rem;
  border-radius: 4px;
  font-weight: 600;
  text-decoration: none;
  transition: background 0.3s ease, transform 0.3s ease;
}

.why-remix-btn:hover {
  background: #cc4a20; /* darker shade of orange */
  transform: translateY(-2px);
}
